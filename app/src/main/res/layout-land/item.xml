<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="20dp">

    <ImageView
        android:background="@drawable/fundo_foto"
        android:id="@+id/item_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:layout_centerVertical="true"
        android:textStyle="italic"
        android:layout_toRightOf="@+id/item_foto"
        android:textSize="35sp"
        android:paddingLeft="20dp"
        android:textColor="#000"
        android:id="@+id/item_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:id="@+id/item_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000"
        android:textStyle="italic"
        android:textSize="15sp"
        android:layout_below="@+id/item_telefone"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/item_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>